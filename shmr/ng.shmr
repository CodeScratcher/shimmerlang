def($done, false)

def($main, () {
  print("Guess? ")
  def($val, read())
  def($the_guess, num(val))

  if_else(
    eq(the_guess, 10), 
    () {
      print("Great! \n")
      set($done, true)
    },
    () {
      if_else(
        lt(the_guess, 10),
        () {
          print("It's greater than that! \n")
        },
        () {
          print("It's less than that! \n")
        }
      )()
    }
  )()

  if(
    not(done),
    () {
      main()
    }
  )()
})

main()