define(forInBackend, (array, callback, start){
  ifElse(greater(start, len(array)),
  (){
    return(0)
  },
  (){
    callback(array, at(array, start))
    forInBackend(array, callback, add(start, 1))
  })
})
define(forIn, (array, callback){
  forInBackend(array, callback, 0)
